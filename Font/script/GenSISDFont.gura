tmpl = tR'''
// 16-Segment Display Font
#ifndef PICO_JXGLIB_FONT_${fontName.Upper()}_H
#define PICO_JXGLIB_FONT_${fontName.Upper()}_H
#include "jxglib/Font.h"

namespace jxglib { namespace Font {
namespace NS_${fontName} {

const FontEntry f_Invalid = { 0x0000, 0, 0, ${xAdvance}, {
} };

${fontInfoTbl.Each {|fontInfo|}}
const FontEntry f_${Format('%04x', fontInfo.code)} = { 0x${Format('%04x', fontInfo.code)}, ${width}, ${height}, ${xAdvance}, {
${Format('0x%02x,', fontInfo.bitmap).Fold(24):*Join() + '\n'}
} };
${end}

}

const FontSet ${fontName} = { &NS_${fontName}::f_Invalid, {
	${Range(0x20, 0x7f) {|code|}}
	&NS_${fontName}::f_${Format('%04x', code)},
	${end}
}, 0, {
} };

} }

#endif
'''

FontInfo = class {
	code as Number
	width as Number
	height as Number
	bitmap[] as Number = []
	__init__(code as Number, width as Number, height as Number, pattern as String) = {
		this.code = code
		this.width = width
		this.height = height
		bytesPerLine = Int(this.width + 7) / 8
		this.bitmap = Dim(bytesPerLine * this.height) { 0 }
		lines = pattern.EachLine():chop:*Align(5, `left)[]
		if (lines.len != 5) {
			sys.cerr.Println('invalid number of lines')
			sys.cerr.Println(pattern)
			sys.Exit()
		}
		(lines[0][1] != ' ') && this.PutSegment(segmentTbl['a1'])
		(lines[0][3] != ' ') && this.PutSegment(segmentTbl['a2'])
		(lines[1][0] != ' ') && this.PutSegment(segmentTbl['f'])
		(lines[1][1] != ' ') && this.PutSegment(segmentTbl['h'])
		(lines[1][2] != ' ') && this.PutSegment(segmentTbl['i'])
		(lines[1][3] != ' ') && this.PutSegment(segmentTbl['j'])
		(lines[1][4] != ' ') && this.PutSegment(segmentTbl['b'])
		(lines[2][1] != ' ') && this.PutSegment(segmentTbl['g1'])
		(lines[2][3] != ' ') && this.PutSegment(segmentTbl['g2'])
		(lines[3][0] != ' ') && this.PutSegment(segmentTbl['e'])
		(lines[3][1] != ' ') && this.PutSegment(segmentTbl['k'])
		(lines[3][2] != ' ') && this.PutSegment(segmentTbl['l'])
		(lines[3][3] != ' ') && this.PutSegment(segmentTbl['m'])
		(lines[3][4] != ' ') && this.PutSegment(segmentTbl['c'])
		(lines[4][1] != ' ') && this.PutSegment(segmentTbl['d1'])
		(lines[4][3] != ' ') && this.PutSegment(segmentTbl['d2'])
	}
	PutSegment(pattern as String) = {
		i = 0
		pattern.ToReader().ReadLines():chop {|line|
			('0b' + line.Fold(8)):*Align(8, `left, '.'):*Replace('#', '1'):*Replace('.', '0'):*ToNumber().Each {|data|
				this.bitmap[i] |= data
				i += 1
			}
		}
	}
	GenerateCCode(fout as Stream) = {
		bytesPerLine = Int(this.width + 7) / 8
		this.bitmap.Fold(bytesPerLine) {|bitmapPerLine|
			fout.Println(Format('%08b', bitmapPerLine).Join())
		}
	}
}

